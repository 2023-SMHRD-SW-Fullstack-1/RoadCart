<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.smhrd.road.mapper.t_LikesMapper">
	
	<!-- 좋아요 등록 -->
	<insert id="likeUp" parameterType="com.smhrd.road.domain.t_likes">
		insert into t_schedule (comm_idx,like_yn,user_id,like_dt)
		values(#{comm_idx},#{like_yn},#{user_id}, #{like_dt})
	</insert>
	
	<!-- 좋아요 개수 -->
	<select id="likeSum" parameterType="com.smhrd.road.domain.t_likes" resultType="com.smhrd.road.domain.t_likes">
		select count(*) from t_likes where user_id = #{user_id};
	</select>
	
	<!-- 좋아요 삭제 -->
	<delete id="likeDelete" parameterType="com.smhrd.road.domain.t_likes">
		delete from t_likes where user_id = #{user_id};
	</delete>
  </mapper>